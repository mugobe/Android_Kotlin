<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/Login_Email" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Email" android:text="myemail@gmail.com"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Login_Password" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_Email"
            app:layout_constraintEnd_toEndOf="@+id/Login_Email"
            app:layout_constraintStart_toStartOf="@+id/Login_Email" android:hint="Paaword"
            app:layout_constraintHorizontal_bias="0.0" android:text="pass12345"/>
    <Button

            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Login_Button" app:layout_constraintEnd_toEndOf="@+id/Login_Password"
            app:layout_constraintStart_toStartOf="@+id/Login_Password" android:background="@drawable/round_button"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="@android:color/background_light"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/Login_Password"/>
    <TextView
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Login_Register" app:layout_constraintEnd_toEndOf="@+id/Login_Button"
            app:layout_constraintStart_toStartOf="@+id/Login_Button" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_Button" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>